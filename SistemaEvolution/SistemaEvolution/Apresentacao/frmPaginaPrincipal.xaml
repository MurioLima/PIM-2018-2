<Window x:Name="frmPaginaInicial" x:Class="SistemaEvolution.Apresentacao.frmPaginaPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaEvolution.Apresentacao"
        mc:Ignorable="d"
        Title="Pagina Inicial" Height="627.973" Width="1264.603">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Label Content="Logo do Sistema" HorizontalAlignment="Left" Margin="415,320,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="94" Width="428" FontSize="50"/>
