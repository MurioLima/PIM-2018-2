                </MenuItem>
                <MenuItem x:Name="mniPaginaFuncionario" Header="" HorizontalAlignment="Left" Height="100" Width="167" Click="mniPaginaFuncionario_Click">
                    <MenuItem.Background>
                        <ImageBrush ImageSource="Imagens/layout botao funcionario.png"/>
                    </MenuItem.Background>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="" Height="100" Width="177">
                <MenuItem.Background>
                    <ImageBrush ImageSource="Imagens/layout botao atendimentos.png"/>
                </MenuItem.Background>
                <MenuItem x:Name="mniPaginaChamados" Header="" Height="100" Width="164" FontSize="18" Click="mniPaginaChamados_Click">
                    <MenuItem.Background>
                        <ImageBrush ImageSource="Imagens/layout list chamados.png"/>
                    </MenuItem.Background>

                </MenuItem>
            </MenuItem>
        </Menu>

    </Grid>
