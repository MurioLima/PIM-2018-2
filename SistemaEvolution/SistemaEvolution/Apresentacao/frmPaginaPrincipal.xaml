            <MenuItem x:Name="mniPaginaInicial" Header="" Height="100" Width="164" FontSize="18">
                <MenuItem.Background>
                    <ImageBrush ImageSource="Imagens/Layout botao pagina inicial.png"/>
                </MenuItem.Background>

            </MenuItem>
            <MenuItem x:Name="mniPaginaCadastros" Header="" Height="100" Width="164" FontSize="18">
