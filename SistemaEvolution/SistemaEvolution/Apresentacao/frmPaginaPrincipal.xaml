                    <ImageBrush ImageSource="Imagens/Layout botao cadastros.png"/>
                </MenuItem.Background>

                <MenuItem x:Name="mniPaginaUsuarios" Header="" HorizontalAlignment="Left" Height="100" Width="167" Click="mniPaginaUsuarios_Click">
                    <MenuItem.Background>
                        <ImageBrush ImageSource="Imagens/Layout list usuarios.png"/>
                    </MenuItem.Background>

                </MenuItem>
                <MenuItem x:Name="mniPaginaClientes" Header="" HorizontalAlignment="Left" Height="100" Width="167" Click="mniPaginaClientes_Click" >
